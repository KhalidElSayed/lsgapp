<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <!-- possible seperators -->
    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:id="@+id/vertretung_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
  	    android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/darkblue" />
    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:id="@+id/vertretung_class"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
  	    android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/lightblue" />
    <!-- content -->
    <TextView
        android:id="@+id/vertretung_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp" />
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="1">
    <TableRow>
        <TextView
            android:id="@+id/vertretung_type"
    	    android:textSize="16sp"
            android:layout_column="1" />
        <TextView
            android:id="@+id/vertretung_when"
            android:gravity="right"
    	    android:textSize="16sp" />
    </TableRow>
</TableLayout>
    <TextView
        android:id="@+id/vertretung_text"
    	    android:textSize="16sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/vertretung_bottom"
    	    android:textSize="16sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <!-- detection -->
    <TextView
        android:id="@+id/vertretung_type_info"
        android:textSize="0sp"
        android:visibility="gone"
        android:text="standard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>